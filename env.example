# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
# For Docker: postgresql://botuser:botpassword@postgres:5432/amazon_affiliate_bot
# For local: postgresql://username:password@localhost:5432/amazon_affiliate_bot
DATABASE_URL=postgresql://botuser:botpassword@postgres:5432/amazon_affiliate_bot

# Amazon PA-API Configuration
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_associate_tag
AMAZON_REGION=IT

# Affiliate Configuration
AMAZON_AFFILIATE_TAG=your_affiliate_tag

# PA-API Configuration
# Set to true only if you have PA-API access (requires 10 qualified sales in last 30 days)
ENABLE_PA_API=false

# Scheduler Configuration
PRICE_CHECK_INTERVAL_HOURS=6

# Daily Summary Configuration (only used when PA-API is disabled)
DAILY_SUMMARY_HOUR=9
DAILY_SUMMARY_MINUTE=0


